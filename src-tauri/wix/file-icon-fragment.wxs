<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <DirectoryRef Id="INSTALLDIR">
      <Component Id="FileIconRegistry" Guid="a1b2c3d4-e5f6-7890-abcd-ef1234567890">
        <!-- Override the DefaultIcon for the file association ProgId -->
        <!-- MSI installs perMachine, so we use HKLM -->
        <RegistryKey Root="HKLM" Key="Software\Classes\Simple Password Manager.kdbx\DefaultIcon">
          <RegistryValue Type="string" Value="[INSTALLDIR]icons\file-icon.ico,0" KeyPath="yes" />
        </RegistryKey>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
